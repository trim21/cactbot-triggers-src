{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "allowJs": true,
    "checkJs": true,
    /* Report errors in .js files. */
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "esModuleInterop": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "global.d.ts"
  ],
  "include": [
    "./src/",
    "./test/"
  ]
}
