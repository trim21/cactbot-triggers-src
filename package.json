{
  "name": "cactbot-triggers",
  "version": "1.0.0",
  "description": "Generate user config files for cactbot with TypeScript",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "workspaces": [
    "overlay_plugin",
    "triggers"
  ],
  "private": true,
  "scripts": {
    "lint": "eslint --ext ts,js,vue ./triggers/",
    "format": "prettier -w ./",
    "triggers": "yarn workspace triggers",
    "build": "yarn workspace triggers build",
    "update-submodules": "git submodule foreach git pull"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": ">=5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "typescript": ">=4.8.4",
    "vue-eslint-parser": "^9.1.0"
  }
}
